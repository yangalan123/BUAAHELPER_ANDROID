<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_notice_fetch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="buaa.buaahelper.MainActivity"
    tools:showIn="@layout/app_bar_notice_fetch">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/FragmentContainer"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar_main_act"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#EEEEEE"
        android:id="@+id/bottom_bar_main_act">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageButton
            android:text="Notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:src="@mipmap/icon_notice_gray"
            android:background="@null"
            android:id="@+id/Notice" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知"
            android:id="@+id/bottom_notice_main_act"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Notice">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/Form"
            android:src="@mipmap/icon_service_gray"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_form_main_act"
            android:text="服务"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Form">
        </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">
        <ImageButton
            android:text="Query"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_search_gray"
            android:layout_centerHorizontal="true"

            android:id="@+id/Query" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="事务查询"
            android:id="@+id/bottom_query_main_act"
            android:layout_below="@id/Query">
        </TextView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
